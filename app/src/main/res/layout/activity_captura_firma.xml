<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ly_login1">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/ly_login">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:id="@+id/ly_ficha">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ly_botones_firmas">

                <Button
                    android:id="@+id/btn_borrar_firma"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_custom"
                    android:textColor="@color/blanco"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/borrar_firma" />


                <Button
                    android:id="@+id/btn_guardar_firma"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/boton_custom"
                    android:textColor="@color/blanco"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/guardar_firma"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ly_firma">


                <FrameLayout
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >

                    <visita_medica.lafar.com.visitamedica.ImagesAndDrawing.CanvasView
                        android:id="@+id/signature_canvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/leyenda_legal_firma"
                        android:id="@+id/leyenda1"
                        android:textColor="@color/plomo_claro"
                        android:layout_gravity="center_horizontal|top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/leyenda_legal_firma"
                        android:id="@+id/leyenda2"
                        android:textColor="@color/plomo_claro"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/leyenda_legal_firma"
                        android:id="@+id/leyenda3"
                        android:textColor="@color/plomo_claro"
                        android:layout_gravity="center_horizontal|bottom" />


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>

