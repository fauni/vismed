<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ly_login1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/negro"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titulo_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/blanco" />


        <ImageView
            android:id="@+id/img_estado_gps"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/celeste_lafar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:id="@+id/ly_formulario_inicial">

        <!--<TextView
            android:id="@+id/lb_ltitulo_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_formulario"
            android:layout_marginTop="10dp"
            android:background="@color/celeste_lafar"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
            -->

            <TextView
            android:id="@+id/lbl_id_boleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/blanco"
            android:text="@string/id_boleta" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/nombre_doctor"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="right"
            android:textColor="@color/blanco"
            android:id="@+id/lbl_nombre_doctor" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/ly_datos">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:id="@+id/ly_observaciones3">

                    <Button
                        android:id="@+id/btn_captura_firma"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blanco"
                        android:background="@drawable/boton_custom"
                        android:text="@string/cargar_firma" />




        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blanco"
            android:background="@drawable/boton_custom"
            android:text="@string/ir_a_visita_negativa"
            android:id="@+id/btn_ir_a_negativa" />




           </LinearLayout>




    </LinearLayout>



    <TextView
        android:id="@+id/lbl_acompanhiado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="@color/negro"
        android:text="@string/visita_acompanhiada" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/sp_acompanhiado"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selector_spinner"
        >
    </Spinner>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:id="@+id/ly_observaciones_y_mas">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ly_observaciones">


        <EditText
            android:id="@+id/txt_observaciones_visita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:inputType="textEmailAddress"
            android:hint="@string/observaciones" />


            </LinearLayout>






    </LinearLayout>







    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:id="@+id/scroll_view">

        <TableLayout
            android:id="@+id/tl_productos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="8dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >


        </TableLayout>
    </ScrollView>
</LinearLayout>
