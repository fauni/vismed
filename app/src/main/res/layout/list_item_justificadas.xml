<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="id_visita"
            android:textColor="@color/negro"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:id="@+id/lbl_id_visita" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre"
            android:textColor="@color/negro"
            android:layout_marginBottom="2dp"
            android:id="@+id/lbl_nombre_doctor"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:textColor="@color/negro"
            android:layout_marginBottom="2dp"
            android:id="@+id/lbl_fecha_realizada"
            />



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">


            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg_botones"
                android:gravity="end"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_autorizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/autorizar"/>

                <RadioButton android:id="@+id/rb_rechazar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rechazar"/>
            </RadioGroup>



    </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@android:color/white" />


</LinearLayout>