<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ly_login1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:id="@+id/ly_login">

        <TextView
            android:id="@+id/lb_ltitulo_lista_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_listado_productos"
            android:layout_marginTop="10dp"
            android:background="@color/celeste_lafar"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cantidad"
                android:textStyle="bold"
                android:id="@+id/lbl_cantidad" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_cantidad" />

            <!-- Editext for Search -->
            <EditText android:id="@+id/txt_input_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/elija_el_producto"
                android:inputType="textVisiblePassword"/>

            <!-- List View -->
            <ListView
                android:id="@+id/lv_lista_productos"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar_banco_de_muestras"
                android:id="@+id/btn_guardar" />

        </LinearLayout>




    </LinearLayout>




</LinearLayout>