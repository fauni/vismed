<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:id="@+id/ly_ficha">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/negro"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titulo_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/blanco" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:id="@+id/ly_ficha_info">



        <TextView
            android:id="@+id/lb_ltitulo_eleccion_mapas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_eleccion_de_mapas"
            android:layout_marginTop="5dp"
            android:background="@color/celeste_lafar"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/sp_observaciones_coordenadas"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_spinner"
        >
        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:id="@+id/ly_all_maps">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/ly_mapa_gps">

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/mapa_gps"
            android:textColor="@color/blanco"
            android:background="@drawable/boton_custom"
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_elegir_gps" />



        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map_gps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/ly_mapa_network">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/mapa_redes"
                android:textColor="@color/blanco"
                android:background="@drawable/boton_custom"
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_elegir_redes" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map_network"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment"/>

        </LinearLayout>




</LinearLayout>

</LinearLayout>

