<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ly_login1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/negro"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titulo_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/blanco" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:id="@+id/ly_filtros">

        <TextView
            android:id="@+id/lb_ltitulo_filtros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_popup_filtro_tareas_pendientes"
            android:layout_marginTop="10dp"
            android:background="@color/celeste_lafar"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:id="@+id/ly_filtro_fecha">


        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tableLayout1"
            >
            <TableRow android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_fecha_filtro"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/plomo"
                    android:background="@color/blanco"
                    android:hint="@string/filtro_por_fecha"
                    android:inputType="date"
                    android:layout_marginRight="5dp"
                    android:enabled="false" />

                <Button
                    android:id="@+id/pickDate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/boton_custom"
                    android:drawableEnd="@drawable/icono_calendario_pequenhio"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tareas_segun_fechas"
                android:background="@drawable/boton_custom"
                android:textColor="@color/blanco"
                android:layout_marginBottom="25dp"
                android:id="@+id/btn_sincronizar_por_fecha" />

        </TableLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:id="@+id/ly_filtro_cate_o_espes">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_filtro_pendientes"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>




</LinearLayout>


