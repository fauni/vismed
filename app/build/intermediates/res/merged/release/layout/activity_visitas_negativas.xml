<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plomo_claro"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/ly_negativa">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/negro"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titulo_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/blanco" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:id="@+id/ly_login">


        <TextView
            android:id="@+id/lb_ltitulo_formulario_negativas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_formulario_tareas_negativas"
            android:layout_marginTop="10dp"
            android:background="@color/celeste_lafar"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:id="@+id/ly_datos">

            <TextView
                android:id="@+id/lbl_id_boleta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="@color/negro"
                android:text="@string/id_boleta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nombre_doctor"
                android:gravity="right"
                android:id="@+id/lbl_nombre_doctor" />

        </LinearLayout>



        <TextView
            android:id="@+id/lbl_enunciado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/negro"
            android:text="@string/enunciado_negativa" />





        <Spinner
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/spinner_negativas"
            android:background="@drawable/selector_spinner"
            android:layout_gravity="right" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/observaciones_visita_negativa"
            android:id="@+id/txt_observaciones_visita_negativa" />



        <TextView
            android:id="@+id/lbl_acompanhiado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/negro"
            android:text="@string/visita_acompanhiada" />


        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/sp_acompanhiado"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_spinner"
            >

        </Spinner>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" >

            <TableRow  android:id="@+id/tbr_conjunto_botones_login">





                <Button
                    android:id="@+id/btn_guardar_negativa"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/blanco"
                    android:background="@drawable/boton_custom"
                    android:text="@string/guardar_negativa" />


            </TableRow>
        </TableLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


